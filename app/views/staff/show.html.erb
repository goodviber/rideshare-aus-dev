
<p>Total Posts: <%= @posts.count %></p>
<table class="dataTable">
  <tr>
    <th>Post ID</td>
    <th>Posted At</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= l post.post_created_at, :format => :short %></td>
    <td class="message"><%= post.message %></td>
    <td><%= link_to 'Process', new_trip_path %></td>
    <td><%= link_to 'Remove', new_trip_path %></td>
    <td></td>
  </tr>
<% end %>
</table>

