<div class="span-22 prepend-top append-bottom">

  <div id="fbLogin" class="span-22"> <!-- changed from span 9 to span 22 !-->
    <%=  image_tag("fb-icon.jpg", {:alt => "Login with facebook", :size => "125x125"}) %><br /><br/>
    <a href="/auth/facebook"><%=  image_tag("fb-login-button.png", {:alt => "Login with facebook", :id => "fbLoginButton"}) %></a>
    <%=  image_tag("loading.gif", {:alt => "Login with facebook", :id => "loadingImage", :style => "display:none;"}) %>
  </div>

  <!-- DISABLE MANUAL SING UP. FACEBOOK ONLY
  <div class="span-3">
    <p class="extralarge">OR<p>
  </div>

  <div class="span-10 last">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <legend>Sign In</legend>
      <ol>
        <li>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </li>
        <li>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </li>
        <li>
        <% if devise_mapping.rememberable? -%>
          <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
        <% end -%>
        </li>
        <li>
          <%= f.submit "Sign in" %>
        </li>
      </ol>

      <%= render :partial => "devise/shared/links" %>
    </fieldset>
    <% end %>
  </div>
  <!-->
</div>

