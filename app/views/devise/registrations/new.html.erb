
<div class="span-22 prepend-top append-bottom">

  <div id="fbLogin" class="span-9">
    <%=  image_tag("fb-icon.jpg", {:alt => "Login with facebook", :size => "125x125"}) %><br /><br/>
    <a href="/auth/facebook"><%=  image_tag("fb-login-button.png", {:alt => "Login with facebook", :id => "fbLoginButton"}) %></a>

  </div>

  <div class="span-3">
    <p class="extralarge">OR<p>
  </div>

  <div class="span-10 last">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <legend>Create new account</legend>
      <ol>
        <li>
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </li>
        <li>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </li>
        <li>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </li>
        <li>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </li>
        <li>
        <%= f.submit "Create account" %>
        </li>
      </ol>

      <%= render :partial => "devise/shared/links" %>
    </fieldset>
    <% end %>
  </div>
</div>

