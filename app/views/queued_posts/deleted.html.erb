
<table class="dataTable">

<% if deleted_count != 0 %>
  <tr>
    <th>Post ID</td>
    <th>FB Page</td>
    <th>Posted At</th>
    <th>Deleted</th>
    <th>Message</th>
    <th></th>
  </tr>
<% end %>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.fb_page(post.page_id) %></td>
    <td><%= l post.post_created_at, :format => :time_date_short %></td>
    <td><%= l post.deleted_at, :format => :time_date_short %></td>
    <td class="message"><%= post.message %></td>
    <td><%= link_to 'undo', { :action => "undestroy", :id => post }, :confirm => 'Are you sure you want to UNDO delete of this post?', :method => :post %></td>
  </tr>
<% end %>
</table>
<br />

