
<table class="dataTable">
  <tr>
    <th></th>
    <th><%= t :leaving %></th>
    <th><%= t :from %></th>
    <th><%= t :to %></th>
    <th><%= t :cost %></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td class="col1"><%= l trip.trip_date, :format => :very_short %></td>
    <td class="deptime col2"><%= trip.dis_trip_time %></td>
    <td class="col3"><%= trip.from_location.name %></td>
    <td class="col4"><%= trip.to_location.name %></td>
    <td><%= number_to_currency(trip.cost, :precision => 0) if trip.cost != 0 %></td>
    <!-- <td><%= link_to 'Destroy', trip, :confirm => 'Are you sure?', :method => :delete %></td> -->

    <td>
      <div class="customTooltip">
        <span>
          <img style="width:25px;" src="<%= trip.driver.fb_pic_url %>">
        </span>
      </div>
      <%= render 'tool_tip', :trip => trip %>
    </td>

    <td><%= link_to 'Details', trip_path(trip) %></td>
  </tr>
<% end %>
</table>

