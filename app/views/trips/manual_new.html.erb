<% content_for :header, javascript_include_tag("http://maps.google.com/maps/api/js?sensor=false", "trips-new-edit") %>

<%= form_for(@trip) do |f| %>
  <div class="span-22">
    <%= render 'error_message' %>
  </div>

  <div class="span-11">
  <fieldset>
    <legend>Facebook User details</legend>
    <ol>
      <li>
        <%= f.label :from_location_id, :class => 'span-3' %>
        <%= collection_select(:trip, :from_location_id, Location.all_cities, :id, :name, {:prompt => 'Select City'}) %>
      </li>
      <li>
        <%= f.label :to_location_id, :class => 'span-3' %>
        <%= collection_select(:trip, :to_location_id, Location.all_cities, :id, :name, {:prompt => 'Select City'}) %>
      </li>
    </ol>
  </fieldset>
    <%= render 'form', :f => f %>
  </div>

  <div class="prepend-1 span-10 last">
    <%= render 'google_map' %>
  </div>
<% end %>

